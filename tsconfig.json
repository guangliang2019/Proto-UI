{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@proto-ui/*": [
        "packages/*/src",
        "packages/modules/*/src",
        "packages/adapters/*/src",
        "packages/legacy/*/src"
      ]
    },
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}
