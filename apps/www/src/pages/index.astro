<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Redirecting...</title>
    <meta name="robots" content="noindex" />
    <meta http-equiv="refresh" content="0;url=/en/" />
    <script is:inline>
      (function () {
        var supported = ['en', 'zh-cn'];
        var fallback = 'en';

        function normalizeLocale(input) {
          if (!input) return '';
          var value = String(input).toLowerCase();
          if (value.startsWith('zh')) return 'zh-cn';
          if (value.startsWith('en')) return 'en';
          return '';
        }

        function readCookie(name) {
          var pattern = new RegExp('(?:^|; )' + name + '=([^;]*)');
          var match = document.cookie.match(pattern);
          return match ? decodeURIComponent(match[1]) : '';
        }

        function detectLocale() {
          var fromStorage = '';
          try {
            fromStorage = localStorage.getItem('preferred-locale') || '';
          } catch (e) {}

          var fromCookie = readCookie('preferred-locale');
          var fromNavigator = (navigator.languages && navigator.languages[0]) || navigator.language || '';

          var candidates = [fromStorage, fromCookie, fromNavigator];
          for (var i = 0; i < candidates.length; i += 1) {
            var normalized = normalizeLocale(candidates[i]);
            if (normalized && supported.indexOf(normalized) !== -1) return normalized;
          }
          return fallback;
        }

        var locale = detectLocale();
        var target = '/' + locale + '/';
        if (window.location.pathname !== target) {
          window.location.replace(target);
        }
      })();
    </script>
  </head>
  <body>
    <a href="/en/">Continue</a>
  </body>
</html>
